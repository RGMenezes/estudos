<h3>Crie sua conta hoje: </h3>

<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" class="form-control" require>

            <label for="email">Email: </label>
            <input type="email" name="email" id="email" class="form-control" require>

            <label for="senha">Senha: </label>
            <input type="password" name="senha" id="senha" class="form-control" require>

            <label for="senha2">Repita a sua senha: </label>
            <input type="password" name="senha2" id="senha2" class="form-control" require>

            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>